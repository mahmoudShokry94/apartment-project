{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "src/types"],
    "types": ["node"],
    "lib": ["ES6", "DOM"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "exclude": ["./node_modules", "./dist", "./.vscode", "./.git"],
  "include": ["src/**/*", "__tests__/**/*"]
}
